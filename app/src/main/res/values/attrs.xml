<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BouncingBallView">
        <attr name="ballCount" format="integer" /><!--小球的个数-->
        <attr name="ballColor" format="color" /><!--小球的颜色-->
        <attr name="ballRadius" format="dimension" /><!--小球的半径-->
        <attr name="cycleTime" format="integer" /><!--一个周期持续的时常-->
    </declare-styleable>
    
    <declare-styleable name="AuditProgressView">
        <attr name="apv_isCurrentComplete" format="boolean"/><!--当前步骤是否完成 -->
        <attr name="apv_isNextComplete" format="boolean"/><!--下一个步骤是否完成 -->
        <attr name="apv_isFirstStep" format="boolean"/><!--是不是第一个步骤-->
        <attr name="apv_isLastStep" format="boolean"/><!--是不是最后一个步骤-->
        <attr name="apv_stepCount" format="integer"/><!--共有几个步骤-->
        <attr name="apv_text" format="string|reference"/><!--步骤提示-->
    </declare-styleable>
</resources>